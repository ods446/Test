name: Build Windows EXE

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: windows-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install cryptography pyinstaller

      - name: Build EXE
        run: |
          pyinstaller --onefile --windowed --name TextCryptAES TextCryptAES.py

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: TextCryptAES.exe
          path: dist/TextCryptAES.exe
